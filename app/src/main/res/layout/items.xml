<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/roundrectangle">

    <TextView
        android:id="@+id/title_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="textTitle"
        android:textColor="#0d0d0d"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_note"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="60dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="textview"
        android:textColor="#0d0d0d"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img_note_image"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_note"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/text_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_note_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="17.02.2012"
        android:textSize="12sp" />

</RelativeLayout>
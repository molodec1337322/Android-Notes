<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/btn_draw_new_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="end"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/oval_for_taskbar"
            android:src="@drawable/ic_baseline_arrow_back_ios_40" />

        <ImageButton
            android:id="@+id/btn_draw_new_brush_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/oval_for_taskbar"
            android:src="@drawable/ic_baseline_brush_40"
            android:layout_toStartOf="@+id/btn_draw_new_accept" />

        <ImageButton
            android:id="@+id/btn_draw_new_accept"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/oval_for_taskbar"
            android:src="@drawable/ic_baseline_save_40"/>



    </RelativeLayout>

    <com.example.androidnotes.custom.CanvasView
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>